@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" style="height:93%;">

        <div class="panel" >
            <div class="container-fluid">
                <div class="topbar-left col-xs-6">

                    <img src="~/assets/img/avatars/TITAN.png" class="img-responsive" width="150px">
                    <h3>Datos de Usuario</h3>
                </div>
            </div>
        </div>
        <div class="panel">
            <div class="container-fluid">

                <div class="row">
                    <div class='form-group-sm'>
                        <label for='txtNombre' class="control-label col-sm-4 left-align">Nombre</label>
                        <div class="col-sm-8">
                            <input id='txtNombre' name="txtNombre" type='text' class="form-control input-sm" tabindex="1">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class='form-group-sm'>
                        <label for='txtUsuario' class="control-label col-sm-4 left-align">Usuario</label>
                        <div class="col-sm-8">
                            <input id='txtUsuario' name="txtUsuario" type='text' class="form-control input-sm" tabindex="2">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class='form-group-sm'>
                        <label for='txtContraseña' class="control-label col-sm-4 left-align">Contraseña</label>
                        <div class="col-sm-8">
                            <input id='txtContraseña' name="txtContraseña" type='text' class="form-control input-sm" tabindex="3">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class='form-group-sm'>
                        <label for='txtSociedad' class="control-label col-sm-4 left-align">Sociedad</label>
                        <div class="col-sm-8">
                            <input id='txtSociedad' name="txtSociedad" type='text' class="form-control input-sm" tabindex="4">
                        </div>
                    </div>
                </div>

                <div class="panel-footer text-right">
                    <div class="row">
                        <button type="button" id="btnGrabar" onclick="ActualizarUsuario()" class="btn btn-primary pull-right plu">Actualizar</button>
                       
                    </div>
                </div>

            </div>
        </div>

    </div>